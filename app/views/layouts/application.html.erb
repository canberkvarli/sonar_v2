<!DOCTYPE html>
<html>
  <head>
    <title>SonarV2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body>
    <% if logged_in? %>
        <script>
            window.currentUser = <%= raw(render partial: "api/users/user", formats: [:json], locals: { user: current_user }) %>;
        </script>
    <% else %>
        <script>
            window.currentUser = {
                id: 0,
                username: 'Guest',
                email: 'guest@example.com'
            };
        </script>
    <% end %>
    <%= yield %>
  </body>
</html>
